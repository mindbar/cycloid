<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:background="#ebebeb">
    <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Connecting..."
            android:id="@+id/txtStatus" android:textColor="@android:color/black" android:paddingBottom="25dp"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" android:baselineAligned="false" android:layout_gravity="center|left"
            android:paddingLeft="20dp">
        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="0.00"
                android:id="@+id/txtSpeed" android:layout_gravity="center" android:textColor="@android:color/black"
                android:textSize="95dp" android:textStyle="bold" android:singleLine="true" android:layout_weight="1"
                android:gravity="right"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="km/h"
                android:id="@+id/txtSpeedUnits" android:layout_gravity="center_horizontal|bottom"
                android:textColor="@android:color/black" android:singleLine="true"
                android:layout_marginBottom="15dp" android:layout_marginRight="10dp"/>
    </LinearLayout>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Max speed: 34 km/h"
            android:id="@+id/textView" android:layout_gravity="center_vertical|right" android:textColor="@android:color/black"
            android:layout_marginRight="10dp"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" android:layout_gravity="center_horizontal" android:paddingLeft="10dp"
            android:paddingRight="10dp" android:id="@+id/layoutCadence">
        <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:text="Cadence"
                  android:textColor="@android:color/black"
                  android:layout_gravity="bottom|right" android:layout_marginBottom="5dp" android:layout_weight="1"
                  android:textSize="16dp"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:id="@+id/txtCadence" android:textColor="@android:color/black"
                android:textSize="80dp" android:layout_gravity="center|right"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RPMs"
                android:id="@+id/txtCadenceUnits" android:textColor="@android:color/black" android:layout_gravity="bottom|right"
                android:layout_marginBottom="5dp"/>
    </LinearLayout>
    <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent"
                  android:layout_height="wrap_content" android:layout_gravity="center|left" android:paddingLeft="10dp"
                  android:paddingRight="10dp">
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Odometer"
                  android:textColor="@android:color/black" android:layout_gravity="bottom"
                  android:layout_marginBottom="5dp"
                  android:width="90dp" android:layout_weight="1" android:textSize="16dp"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="12.4"
                  android:id="@+id/txtOdometer" android:textColor="@android:color/black" android:textSize="35dp"
                  android:textStyle="bold" android:layout_gravity="center_vertical" android:layout_marginRight="5dp"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="km"
                  android:id="@+id/txtOdoUnits" android:textColor="@android:color/black" android:layout_gravity="bottom|right"
                  android:layout_marginBottom="5dp"/>
    </LinearLayout>
    <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent"
                  android:layout_height="wrap_content" android:layout_gravity="center|left" android:paddingLeft="10dp"
                  android:paddingRight="10dp">
        <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:text="Total Distance"
                  android:textColor="@android:color/black" android:layout_gravity="center_vertical|bottom"
                  android:layout_marginBottom="5dp"
                  android:layout_weight="1" android:textSize="16dp"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="10 352.9"
                  android:id="@+id/txtDistance" android:textColor="@android:color/black" android:textSize="35dp"
                  android:textStyle="bold" android:layout_gravity="center" android:layout_marginRight="5dp"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="km"
                  android:id="@+id/txtDistUnits" android:textColor="@android:color/black"
                  android:layout_gravity="center|bottom|right" android:layout_marginBottom="5dp"
                />
    </LinearLayout>
    <LinearLayout android:orientation="horizontal" android:layout_width="wrap_content"
                  android:layout_height="wrap_content" android:layout_gravity="center" android:paddingLeft="20dp"
            >
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reset ODO"
                android:id="@+id/btnOdoReset" android:layout_gravity="center" android:enabled="false"/>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reconnect"
                android:id="@+id/btnReconnect" android:layout_gravity="center"/>
    </LinearLayout>
</LinearLayout>

